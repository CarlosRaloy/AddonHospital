<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hospital_especialidades_form_view" model="ir.ui.view">
            <field name="name">hospital_especialidades.form</field>
            <field name="model">hospital.especialidades</field>
            <field name="arch" type="xml">
                <form string="Especialiades">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Titulo"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="codigo"/>
                            </group>
                            <group>
                                <field name="descripcion"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hospital_especialidades_tree_view" model="ir.ui.view">
            <field name="name">hospital_especialidades.tree</field>
            <field name="model">hospital.especialidades</field>
            <field name="arch" type="xml">
                <tree string="Especialidades">
                    <field name="name"/>
                    <field name="codigo"/>
                    <field name="descripcion"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>