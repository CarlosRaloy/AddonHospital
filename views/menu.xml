<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_hospital_registros_menu" model="ir.actions.act_window">
            <field name="name">Hospital</field>
            <field name="res_model">hospital.registros</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_overview_empty_folder">
                    Crear registro de pacientes
                </p>
            </field>
        </record>

        <record id="res_partner_action_pacientes" model="ir.actions.act_window">
            <field name="name">Pacientes</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <!--<field name="context">{'search_default_customer': 1, 'res_partner_search_mode': 'customer', 'default_is_company': True, 'default_customer_rank': 1}</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear nuevos pacientes
                </p>
            </field>
        </record>

        <record id="hospital_consultorio_action_window" model="ir.actions.act_window">
            <field name="name">Consultorio</field>
            <field name="res_model">hospital.consultorio</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Consultorios del hospital.
                </p>
            </field>
            <field name="view_id" ref="hospital_consultorio_tree_view"/>
        </record>

        <!-- === .::: Seccion de menus :::. === -->

        <menuitem id="menu_hospital" name="Hospital" sequence="10" groups="base.group_user,base.group_partner_manager" web_icon="hospital,static/description/icon.png"/>

        <menuitem id="menu_action_reg" parent="menu_hospital" name="Registros" sequence="1" action="action_hospital_registros_menu" groups="base.group_user"/>

        <menuitem id="pacientes_hospital_menu" parent="menu_hospital" name="Pacientes" sequence="2" action="res_partner_action_pacientes" groups="base.group_user"/>

        <menuitem name="Ajustes" sequence="10" id="hospital_ajustes_menu" parent="menu_hospital" groups="base.group_user, base.group_partner_manager, base.group_system"/>

        <menuitem name="Consultorios" sequence="3" id="hospital_consultorio_menu" groups="base.group_user" parent="menu_hospital" action="hospital_consultorio_action_window"/>


    </data>
</odoo>